{
  "manifest_version": 2,

  "name": "YTBSP",
  "description": "Spotilghts all subscriptions in an oranized fashion on the Startpage of YouTube.",
  "version": "1.3.5",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
	 "js": ["injector.js"],
	 "run_at": "document_start",
	 "matches": ["https://www.youtube.com/*"]
  }],
  "web_accessible_resources": ["lib/api.js","lib/jquery.slim.min.js","lib/moment.min.js","YTBSP.js"],
  "permissions": [
    "activeTab",
    "storage"
  ]
}